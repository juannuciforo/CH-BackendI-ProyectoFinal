<div class="container">
    <h1 class="center-align">
        Bienvenido a la página de inicio
    </h1>
    {{#if products.docs.length}}
    <ul class="collection">
        {{#each products.docs}}
        <li class="collection-item product-row" onclick="window.location.href='/products/{{this._id}}'"
            style="cursor: pointer;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <span>{{this.title}}</span>
                <span class="secondary-content">${{this.price}}</span>
            </div>
        </li>
        {{/each}}
    </ul>
    <div class="center-align">
        <div class="pagination center-align"
            style="display: flex; justify-content: center; align-items: center; gap: 10px;">
            {{#if products.hasPrevPage}}
            <a href="/?page={{products.prevPage}}&limit=10" class="btn-flat waves-effect">
                <i class="material-icons">chevron_left</i>
            </a>
            {{/if}}

            <span class="btn red lighten-2">Página {{products.page}}</span>

            {{#if products.hasNextPage}}
            <a href="/?page={{products.nextPage}}&limit=10" class="btn-flat waves-effect">
                <i class="material-icons">chevron_right</i>
            </a>
            {{/if}}
        </div>
        {{else}}
        <div class="center-align">
            <h4 class="grey-text text-darken-2">No hay productos disponibles</h4>
        </div>
        {{/if}}
        <div class="section center-align">
            <a href="/realtimeproducts" class="btn waves-effect waves-light teal">
                Ver Productos en Tiempo Real
            </a>
        </div>
    </div>
</div>